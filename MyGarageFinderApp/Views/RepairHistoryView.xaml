<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyGarageFinderApp.Views.RepairHistoryView"
             Title="RepairHistoryView">
    <VerticalStackLayout>
        <Label>
            <Label.FormattedText>
                <FormattedString>
                    <!-- License Plate span -->
                    <Span Text="{Binding SelectedVehicle.LicensePlate}" 
                          FontAttributes="Bold" 
                          FontSize="Medium" />
                    <!-- Spacer (just to add some space between values) -->
                    <Span Text=" - " FontSize="Medium"/>
                    <!-- Model span -->
                    <Span Text="{Binding SelectedVehicle.Model}" 
                          FontSize="Medium"/>
                    <!-- Spacer -->
                    <Span Text=" (" FontSize="Medium"/>
                    <!-- Manufacturer span -->
                    <Span Text="{Binding SelectedVehicle.Manufacturer}" 
                          FontSize="Medium"/>
                    <!-- Closing Parenthesis -->
                    <Span Text=")" FontSize="Medium"/>
                </FormattedString>
            </Label.FormattedText>
        </Label>
    </VerticalStackLayout>
</ContentPage>